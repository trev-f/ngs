manifest {
    author            = 'Trevor F. Freeman; Ryan D. Kuster'
    defaultBranch     = 'main'
    recurseSubmodules = true
    description       = 'A Nextflow pipeline for base NGS analysis.'
    mainScript        = 'main.nf'
    name              = 'utia-gc/ngs'
    nextflowVersion   = '>=21.04'
    version           = 'v0.0.0.9001'
}

timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm')

params {
    /*
    ---------------------------------------------------------------------
        Project parameters
    ---------------------------------------------------------------------
    */
    projectTitle        = "ngs"

    /*
    ---------------------------------------------------------------------
        Publishing parameters
    ---------------------------------------------------------------------
    */

    publishDirData    = "${launchDir}/data"
    publishDirReports = "${launchDir}/reports"
    publishMode       = 'copy'
    publishTrimReads  = true

    /*
    ---------------------------------------------------------------------
        Tools
    ---------------------------------------------------------------------
    */
    
    tools {
        trim             = "cutadapt"
    }

   /*
    ---------------------------------------------------------------------
        Reads QC parameters
    ---------------------------------------------------------------------
    */

    skipRawReadsQC       = false
    skipPrealignReadsQC  = false

    /*
    ---------------------------------------------------------------------
        Read-trimming parameters
    ---------------------------------------------------------------------
    */

    trimTool             = "cutadapt"
    r1_adapter           = "AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT"
    r2_adapter           = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC"
    minimum_length       = 30
    skipTrimReads        = false
    skipTrimFastQC       = false

    /*
    ---------------------------------------------------------------------
        Alignment parameters
    ---------------------------------------------------------------------
    */
    skipAlignmentStatsQC = false
}


profiles {
    exploratory {
        params {
            publishDirData    = "${launchDir}/exploratory/${timestamp}_${params.projectTitle}/data"
            publishDirReports = "${launchDir}/exploratory/${timestamp}_${params.projectTitle}/reports"
            publishMode       = 'symlink'
        }
        resume = true
    }

    isaac {
        includeConfig "conf/isaac.config"
        workDir = "${SCRATCHDIR}/${params.project_title}/work/"

        executor {
            queueSize = 50
            submitRateLimit = '10/1min'
        }

        singularity {
            enabled = true
            cacheDir = "/nfs/home/${USER}/singularity/"
            autoMounts = true
        }

        process {
            publish_dir = "${SCRATCHDIR}/${params.project_title}/publish/"
            executor = 'slurm'
        }
        includeConfig "conf/reporting.config"
    }

    utiacr {
        includeConfig "conf/utiacr.config"
        workDir = "${params.publish_dir}/${params.project_title}/work/"

        singularity {
            enabled = true
            cacheDir = "${HOME}/singularity/"
            autoMounts = true
        }

        process {
            publish_dir = "${params.publish_dir}/${params.project_title}/publish/"
        }
        includeConfig "conf/reporting.config"
    }

    nf_test {
        params.samplesheet = "https://github.com/trev-f/SRAlign-test/raw/rnaseq/samplesheets/samplesheet_mix.csv"
        params.genome      = "https://github.com/trev-f/SRAlign-test/raw/rnaseq/data/references/R64-1-1/genome_I.fa.gz"
        params.annotations = "https://github.com/trev-f/SRAlign-test/raw/rnaseq/data/references/R64-1-1/annotations_I.gtf.gz"
        
        singularity {
            enabled = true
            cacheDir = "${SCRATCHDIR}/singularity/"
            autoMounts = true
        }
    }
}

/*
---------------------------------------------------------------------
    Import config files
---------------------------------------------------------------------
*/
includeConfig "conf/containers.config"
includeConfig 'conf/reporting.config'
